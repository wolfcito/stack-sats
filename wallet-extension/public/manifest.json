{
  "manifest_version": 3,
  "name": "Stacks-Wallet",
  "version": "1.0.0",
  "description": "Stacks Wallet - Your Bitcoin Layer 2 experience, secured.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://api.platform.hiro.so/*",
    "https://api.hiro.so/*",
    "https://stacks-node-api.testnet.stacks.co/*",
    "https://stacks-node-api.mainnet.stacks.co/*"
  ],
  "icons": {
    "48": "laser-eyes-lil-guy-dark.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injection.js"],
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*"
      ]
    }
  ]
}
